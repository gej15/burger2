<h1>Eat-Da-Burger</h1>

<img class="img" src="/assets/images/burger.png">

<div class="d-flex justify-content-center">
  <div class="readyDiv">
    <h2 >Burgers Ready to Eat</h2>
      <div class="offset-lg-3">
        <ol>
          {{#each burgers}}
            {{#unless devoured}}
              {{> burger-block devoured=true}}
            {{/unless}}
          {{/each}}
        </ol>
      </div>
  </div>
  <div class="eatenDiv">
    <h2>Eaten Burgers</h2>
      <div class="offset-lg-4">
        <ol>
          {{#each burgers}}
            {{#if devoured}}
              {{> burger-eaten devoured=false}}
            {{/if}}
          {{/each}}
        </ol>
      </div>  
  </div>
</div>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>
